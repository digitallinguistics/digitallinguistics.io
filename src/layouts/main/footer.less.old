.footer {

  align-items:      center;
  background-color: var(--blue);
  flex-direction:   row;
  justify-content:  center;

  a:link,
  a:visited,
  a:hover,
  a:active {
    color: white;
  }

  a::after {
    display: none;
  }

  .octicon {
    height: 3.5em;
    margin: 1rem;
    width:  3.5em;
  }

  p {
    padding: 0.5em 0.25em;
  }

}

@media (max-width: 40em) {
  .footer {

    flex-direction: column;

    .octicon {
      margin-bottom: -0.5em;
    }

  }
}
